<div class="well">
  <span class="task">
   <%= link_to user_task, remote: true, method: :delete, data: { confirm: 'Are you sure?' } do %>
    <%= fa_icon('square-o', text: user_task.description) %>
    <% end %>
  </span>
  <%= link_to fa_icon('eye'), user_task %>
  <%= link_to fa_icon('pencil'), edit_user_task_path(user_task), remote: true %>

  <span class="pull-right">
    <em><%= user_task.due_date.try(:stamp, 'Monday, 12/31/16') %>
  </em></span>
</div>